<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Username</th>
      <th scope="col">Email</th>
      <th scope="col">Password</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <th scope="row"><%= user.id %></th>
      <td><%= link_to user.username, user_path(user) %></td>
      <td><%= user.email %></td>
      <td><%= user.password %></td>
    </tr>
    <% end %>
  </tbody>
</table>
